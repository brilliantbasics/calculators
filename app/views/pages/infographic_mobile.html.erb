		<div id='sheet'>
			<div id='costs-box'>
				<div id='costs' class='txt'>
					Costs
				</div>
				<img id='l1' src=<%=asset_path "static/pngs/line1.png"%>>
				<img id='l2' src=<%=asset_path "static/pngs/line2.png"%>>
				<img id='l3' src=<%=asset_path "static/pngs/line3.png"%>>
				<img id='l4' src=<%=asset_path "static/pngs/line5.png"%>>
			</div>
			<div id='sustainability-box'>
				<div id='level' class='txt'>
					Service<br>
					Level
				</div>
				<div id="bargraph">
					<div id='bar1' class='bar'></div>
					<div id='bar2' class='bar'></div>
					<div id='bar3' class='bar'></div>
					<div id='bar4' class='bar'></div>
					<div id='bar5' class='bar'></div>
				</div>
			</div>
			<div id='risks-box'>
